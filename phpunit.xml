<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="string">
            <directory suffix="Test.php">./tests/String</directory>
        </testsuite>
        <testsuite name="bool">
            <directory suffix="Test.php">./tests/Bool</directory>
        </testsuite>
        <testsuite name="numbers">
            <directory suffix="Test.php">./tests/Numbers</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">./src/</directory>
            <exclude>
            	<directory>vendor/</directory>
            </exclude>
        </whitelist>
    </filter>
    <php>
        <ini name="display_errors" value="On" />
        <ini name="display_startup_errors" value="On" />
    </php>
    <logging>
    	<log type="coverage-html" target="tests/coverage" showUncoveredFiles="true"/>
    </logging>
</phpunit>
